<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bruce.leanote.ui.notebook.NotebookActivity">

    <include
        android:id="@+id/notebook_top"
        layout="@layout/toolbar_layout"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_notebook_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/notebook_transition_name"
        android:layout_below="@+id/abl_app_bar_layout"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="@dimen/floating_action_button_width"
        android:layout_height="@dimen/floating_action_button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="8dp"
        app:backgroundTint="@color/md_red_400"
        android:src="@drawable/ic_add"/>

</RelativeLayout>
